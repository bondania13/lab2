<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#7ED4DF"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:id="@+id/textViewam"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_y="30dp"
        android:background="@color/white"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Конвертер валют. Америка"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="100dp"
        android:text="Оберіть валюту, з якої конвертуємо"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <Spinner
        android:id="@+id/currencies_from_spinner_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="130dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/textView3am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="170dp"
        android:text="Оберіть валюту, на яку конвертуємо"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <Spinner
        android:id="@+id/currencies_to_spinner_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="200dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/textView5am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="240dp"
        android:text="Введіть суму:"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/amount_input_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="260dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/convert_am_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="330dp"
        android:gravity="center"
        android:onClick="onOperationClick_am"
        android:text="Конвертувати!"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="400dp"
        android:text="Результат:"
        android:textColor="@color/black"
        android:textSize="16sp"/>


    <EditText
        android:id="@+id/result_field_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="420dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/res_text_am"
        android:layout_width="324dp"
        android:layout_height="56dp"
        android:layout_x="43dp"
        android:layout_y="506dp" />

</AbsoluteLayout>